<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <% if current_page.data.title %>
      <title><%= "#{current_page.data.title} | Shuyang Li" %></title>
    <% else %>
      <title>Shuyang Li</title>
    <% end %>

    <!-- jQuery (required by Bootstrap) -->
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= stylesheet_link_tag "menu", "footer" %>

    <% if current_page.data.css %>
      <% current_page.data.css.each do |file| %>
        <%= stylesheet_link_tag file %>
      <% end %>
    <% end %>

    <%= javascript_include_tag "all", "email", "tracking" %>

    <% if current_page.data.js %>
      <% current_page.data.js.each do |file| %>
        <%= javascript_include_tag file %>
      <% end %>
    <% end %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <script src="https://use.typekit.net/bas7pmz.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
  </body>
</html>
