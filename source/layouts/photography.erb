<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Personal website of Shuyang Li">
    <meta name="author" content="Shuyang Li">

    <!-- Use title if it's in the page YAML frontmatter -->
    <% if current_page.data.title %>
      <title><%= "#{current_page.data.title} | Shuyang Li" %></title>
    <% else %>
      <title>Shuyang Li</title>
    <% end %>

    <!-- jQuery (required by Bootstrap) -->
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= stylesheet_link_tag "menu", "footer" %>
    <%= stylesheet_link_tag "photography-page" %>

    <% if current_page.data.css %>
      <% current_page.data.css.each do |file| %>
        <%= stylesheet_link_tag file %>
      <% end %>
    <% end %>

    <%= javascript_include_tag "all", "email", "tracking" %>

    <% if current_page.data.js %>
      <% current_page.data.js.each do |file| %>
        <%= javascript_include_tag file %>
      <% end %>
    <% end %>
  </head>

  <% file_id = Pathname.new(current_page.path).basename.to_s.split(".").first %>

  <body class="<%= page_classes %>">
    <%= partial "menu" %>

    <div class="container-fluid">
      <div class="col-sm-2">
        <h1 class="page-title"><%= current_page.data.title %></h1>
      </div>
      <div class="col-sm-9">
        <div class="article-wrapper">
          <%= yield %>
        </div>
      </div>
    </div>

    <script src="https://use.typekit.net/bas7pmz.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
  </body>
</html>
